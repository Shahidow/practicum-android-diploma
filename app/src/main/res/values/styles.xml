<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="screen_team_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginTop">@dimen/indent_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="toolbar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <!--- VACANCY -->
    <style name="vacancy_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="vacancy_subtitle_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="vacancy_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="vacancy_contact_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="search_industry_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/indent_56</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/indent_16</item>
        <item name="android:layout_marginTop">@dimen/indent_8</item>
        <item name="android:layout_marginBottom">@dimen/indent_8</item>
        <item name="android:layout_marginStart">@dimen/indent_16</item>
        <item name="android:layout_marginEnd">@dimen/indent_16</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

</resources>
