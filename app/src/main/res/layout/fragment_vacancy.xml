<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back, Share and Favorite Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/job_vacancy"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_share_24" />

            <ImageButton
                android:id="@+id/favoriteButtonOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="22dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_favorite_off_24" />

            <ImageButton
                android:id="@+id/favoriteButtonOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="22dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_favorite_on_24"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Placeholder for Error or No Internet -->
        <LinearLayout
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder_no_vacancy_found" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center_horizontal"
                android:text="@string/Unavailable"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ys_display_bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="32sp"
                tools:text="Android-разработчик" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobSalaryAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="22sp"
                    tools:text="от 100 000" />

                <TextView
                    android:id="@+id/jobSalaryCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="22sp"
                    tools:text="₽" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_company_info"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/companyLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ys_display_medium"
                        android:textColor="?attr/textInVacancyDatails"
                        android:textSize="22sp"
                        tools:text="Еда" />

                    <TextView
                        android:id="@+id/companyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ys_display_regular"
                        android:textColor="?attr/textInVacancyDatails"
                        android:textSize="16sp"
                        tools:text="Москва" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:paddingBottom="4dp"
                android:text="@string/required_experience"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/experienceFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="От" />

                <TextView
                    android:id="@+id/experienceMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="1" />

                <TextView
                    android:id="@+id/experienceTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="до" />

                <TextView
                    android:id="@+id/experienceMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="3" />

                <TextView
                    android:id="@+id/experienceYears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="лет" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/employmentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="Полная занятость" />

                <TextView
                    android:id="@+id/workMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    tools:text="Удаленная работа" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/vacancy_description"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/responsibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="Обязанности" />

            <TextView
                android:id="@+id/jobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="• Разрабатывать новую функциональность приложения\n• Помогать с интеграцией нашего SDK в другие приложения\n• Проектировать большие новые модули\n• Писать UI- и unit-тесты\n• Следить за работоспособностью сервиса и устранять технический долг" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/key_skills"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/keySkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:paddingBottom="16dp"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="• Знание классических алгоритмов и структуры данных\n• Программирование для Android больше одного года\n• Знание WebRTC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/Contacts"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:paddingBottom="4dp"
                android:text="@string/contact_person"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="Ирина" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="E-mail" />

            <TextView
                android:id="@+id/e_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="irina@yandex.ru" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="Телефон" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="+79043292771" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="Комментарий" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="Заполнить анкету по форме можно на нашем сайте" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loader"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="140dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
