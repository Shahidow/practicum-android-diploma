<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_width_image_view_employer_logo"
    android:layout_marginBottom="@dimen/margin_width_image_view_employer_logo">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintGuide_percent="0.15" />


    <ImageView
        android:id="@+id/image_view_employer_logo_url"
        android:layout_width="@dimen/indent_48"
        android:layout_height="@dimen/indent_48"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_width_image_view_employer_logo"
        android:background="@drawable/rectangle_for_image_view_employer_logo_url"
        android:padding="@dimen/border_width_employer_logo"
        android:src="@drawable/placeholder_android"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_view_vacancy_name_and_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_width_image_view_employer_logo"
        android:layout_marginTop="@dimen/margin_width_image_view_employer_logo"
        android:breakStrategy="simple"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_employer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_width_image_view_employer_logo"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/text_view_vacancy_name_and_city"
        tools:text="Еда" />

    <TextView
        android:id="@+id/text_view_vacancy_salary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_width_image_view_employer_logo"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/text_view_employer_name"
        tools:text="от 100000 до 280000 руб" />
</androidx.constraintlayout.widget.ConstraintLayout>
