<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.filtration.place.FilterPlaceFragment">

    <ImageView
        android:id="@+id/workplaceBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_16"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/workplace_selection"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workplaceHeader"
        style="@style/toolbar_style"
        android:layout_marginStart="@dimen/indent_16"
        android:layout_marginTop="@dimen/indent_20"
        android:text="@string/workplace_selection"
        app:layout_constraintStart_toEndOf="@+id/workplaceBackImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/countrySelectionInputLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_60"
        android:layout_marginTop="36dp"
        android:background="?attr/colorSecondary"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:enabled="true"
        android:focusable="true"
        android:hint="@string/country"
        android:textAlignment="viewStart"
        android:textColorHint="@color/gray"
        app:boxBackgroundColor="?attr/colorSecondary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplaceHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/countrySelectionEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="textCapSentences"
            android:lines="1"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_16"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/countrySelectionArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60"
        android:layout_marginEnd="@dimen/indent_16"
        android:contentDescription="@string/workplace_selection"
        android:src="@drawable/baseline_arrow_forward"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/countrySelectionInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/countrySelectionInputLayout" />

    <ImageView
        android:id="@+id/countryClearImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60"
        android:layout_marginEnd="@dimen/indent_16"
        android:contentDescription="@string/workplace_selection"
        android:src="@drawable/baseline_close_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/countrySelectionInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/countrySelectionInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/regionInputLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_60"
        android:background="?attr/colorSecondary"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:enabled="true"
        android:focusable="true"
        android:hint="@string/region"
        android:textAlignment="viewStart"
        android:textColorHint="@color/gray"
        app:boxBackgroundColor="?attr/colorSecondary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countrySelectionInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/regionEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="textCapSentences"
            android:lines="1"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_16"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/regionArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60"
        android:layout_marginEnd="@dimen/indent_16"
        android:contentDescription="@string/workplace_selection"
        android:src="@drawable/baseline_arrow_forward"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/regionInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/regionInputLayout" />

    <ImageView
        android:id="@+id/regionClearImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60"
        android:layout_marginEnd="@dimen/indent_16"
        android:contentDescription="@string/workplace_selection"
        android:src="@drawable/baseline_close_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/regionInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/regionInputLayout" />

    <Button
        android:id="@+id/workplaceApplyButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_60"
        android:layout_marginHorizontal="@dimen/indent_16"
        android:layout_marginBottom="@dimen/indent_24"
        android:background="@drawable/blue_rounded_background"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/select"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
