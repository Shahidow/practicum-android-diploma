<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.team.TeamFragment">

    <TextView
        android:id="@+id/teamTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/indent_16"
        android:layout_marginVertical="@dimen/indent_20"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/team"
        android:textColor="@color/black_day_white_night"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintBottom_toTopOf="@id/TeamMembersTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TeamMembersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/indent_16"
        android:layout_marginTop="@dimen/indent_24"
        android:fontFamily="@font/ys_display_bold"
        android:text="@string/team_members"
        android:textColor="@color/black_day_white_night"
        android:textSize="@dimen/text_size_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teamTextView" />

    <TextView
        android:id="@+id/developer1"
        style="@style/screen_team_style"
        android:layout_marginTop="@dimen/indent_32"
        android:text="@string/developer_name_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TeamMembersTextView" />

    <TextView
        android:id="@+id/developer2"
        style="@style/screen_team_style"
        android:text="@string/developer_name_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer1" />

    <TextView
        android:id="@+id/developer3"
        style="@style/screen_team_style"
        android:text="@string/developer_name_3"
        android:textColor="@color/black_day_white_night"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer2" />

    <TextView
        android:id="@+id/developer4"
        style="@style/screen_team_style"
        android:text="@string/developer_name_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer3" />

    <TextView
        android:id="@+id/developer5"
        style="@style/screen_team_style"
        android:text="@string/developer_name_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer4" />

</androidx.constraintlayout.widget.ConstraintLayout>
